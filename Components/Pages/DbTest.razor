@page "/dbTest"

<h1>Test Database</h1>

<p role="status">Query Result:</p>

@if (data.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                @foreach (var column in data[0].Keys)
                {
                    <th>@column</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in data)
            {
                <tr>
                    @foreach (var value in row.Values)
                    {
                        <td>@value</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data available</p>
}

<button class="btn btn-primary" @onclick="LoadData">Click me</button>

@code {
    private List<Dictionary<string, object>> data = new();

    private async Task LoadData()
    {
        try
        {
            var database = new Database();
            data = await database.ExecuteQueryWithResult("SELECT * FROM Student");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
            data.Clear();
        }
    }
}
