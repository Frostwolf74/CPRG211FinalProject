@using CPRG211FinalProject.Components.Helpers
@inject HeaderService HeaderService

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()" style="background-color: #d9d9d9; min-height: 200vh;">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick=@(() => SetHeader("Main Page")) Match="NavLinkMatch.All"
                     style="background-color: #101010;">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Main Page
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Customer" @onclick=@(() => SetHeader("Customer")) Match="NavLinkMatch.All"
                     style="background-color: #101010;">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Customer
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dbTest" @onclick=@(() => SetHeader("Test Database"))
                     Match="NavLinkMatch.All" style="background-color: #101010;">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Test Database
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Equipment" @onclick=@(() => SetHeader("Equipment")) Match="NavLinkMatch.All"
                     style="background-color: #101010;">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Equipment
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Membership" @onclick=@(() => SetHeader("Membership"))
                     Match="NavLinkMatch.All" style="background-color: #101010;">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Membership
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private void SetHeader(string title)
    {
        HeaderService.SetHeader(title);
    }
}